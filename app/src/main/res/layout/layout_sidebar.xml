<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android2">

    <ImageView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="center"
        android:src="@drawable/gas" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/gps1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tvContact"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend Contact"
        android:textSize="15dp"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="openFriendPage"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/gps2"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tvHistory"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:textSize="15dp"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="openMap"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/tvContact"
        android:layout_alignStart="@+id/tvContact" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/gps3"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tvMaps"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maps"
        android:textSize="15dp"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/tvHistory"
        android:layout_alignStart="@+id/tvHistory"
        android:visibility="gone"/>

</RelativeLayout>
